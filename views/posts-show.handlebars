<a href="/">Back to Home</a>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>{{post.title}}</h1>
    <p>{{post.content}}</p>
    <p><a href="/posts/{{post._id}}/edit">Edit</a></p>
    <p><form method="POST" action="/posts/{{post._id}}?_method=DELETE">
        <button class="btn btn-primary" type="submit">Delete</button>
    </form></p>

    <hr>

    <!-- Comment form -->
    {{> comments-form}}
    {{#each comments}}
      {{> commentPartial}}
    {{/each}}
  </div>
</div>
